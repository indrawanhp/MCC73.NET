@{
    Layout = "_AdminLayout";
    ViewBag.Title = "List Employees";
}

<style>
    label {
        width: 300px;
        display: inline-block;
        margin-top: 20px;
    }

        label.error {
            color: red;
            font-size: 12px;
            display: block;
            margin-top: 5px;
        }

    input.error, textarea.error {
        border: 1px solid red;
        color: red;
    }
</style>

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="row p-3 pb-0 mb-0">
                <div class="col-3 text-center ms-auto">
                    <button type="button" id="insert" value="insert" class="btn btn-primary btn-sm ms-auto" data-bs-toggle="modal" data-bs-target="#modal-form" onclick="$('#EmployeeForm')[0].reset(); Add();">Insert Data</button>
                </div>
            </div>
            <div class="card-header d-flex pb-0 pt-0 mb-3">
                <h5 class="fw-bold mx-auto">Data Employees</h5>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive px-4">
                    <table id="myTable" class="table align-items-center mb-0" cellspacing="0" width="100%">
                        <thead class="table-light">
                            <tr>
                                <th class="text-uppercase text-xxs font-weight-bolder">Nik</th>
                                <th class="text-xxs font-weight-bolder ps-2">First Name</th>
                                <th class="text-xxs font-weight-bolder ps-2">Last Name</th>
                                <th class="text-xxs font-weight-bolder ps-2">Phone</th>
                                <th class="text-xxs font-weight-bolder ps-2">Birth Date</th>
                                <th class="text-xxs font-weight-bolder ps-2">Salary</th>
                                <th class="text-xxs font-weight-bolder ps-2">Email</th>
                                <th class="text-xxs font-weight-bolder ps-2">Gender</th>
                                <th class="text-xxs font-weight-bolder ps-2">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="modal-default" aria-hidden="true">
    <div class="modal-dialog modal- modal-dialog-centered modal-" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title" id="modal-title-default">Form Data</h6>
                <button type="button" class="btn btn-link ml-auto" data-bs-dismiss="modal">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </button>
            </div>

            <div class="modal-body">
                <form id="EmployeeForm" class="needs-validation" novalidate>
                    <div class="form-group">
                        <div class="col-12">
                            <label for="nik" class="form-label">NIK</label>
                            <input type="text" id="nik" name="nik" class="form-control" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                <label for="firstname" class="form-label">First Name</label>
                                <input type="text" id="firstname" name="firstname" class="form-control" required />
                            </div>
                            <div class="col-6">
                                <label class="form-label">Last Name</label>
                                <input type="text" id="lastname" name="lastname" class="form-control" required />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                <label class="form-label">Email</label>
                                <input type="email" id="email" name="email" class="form-control" required />
                            </div>
                            <div class="col-6">
                                <label class="form-label">Phone</label>
                                <input type="number" maxlength="15" id="phone" name="phone" class="form-control" required />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-6">
                                <label class="form-label">Birth Date</label>
                                <input type="date" id="birth_date" name="birth_date" class="form-control date" required />
                            </div>
                            <div class="col-6">
                                <label class="form-label">Salary</label>
                                <input type="text" id="salary" name="salary" class="form-control" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="gender">Gender</label>
                        <select name="gender" id="gender" class="form-select" required>
                            <option selected disabled hidden>Select Gender</option>
                            <option value="0">Male</option>
                            <option value="1">Female</option>
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button id="save" type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-link ml-auto" data-bs-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

