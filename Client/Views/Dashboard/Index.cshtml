@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Dashboard";
}

<div class="row">
    <div class="col-6">
        <div class="card z-index-2 h-100">
            <div class="card-header pb-0 pt-3 bg-transparent">
                <h6 class="text-capitalize">Gender overview</h6>
                <p class="text-sm mb-0">
                    <i class="fas fa-solid fa-venus-mars"></i>
                    <span class="font-weight-bold"> more</span> in 2023
                </p>
            </div>
            <div class="card-body p-3">
                <div class="chart">
                    <div id="chart" class="chart-canvas" height="300px"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="card mb-3 h-100">
            <div class="card-header pb-0 pt-3 bg-transparent">
                <h6 class="text-capitalize">Gender Bar</h6>
                <p class="text-sm mb-0">
                    <i class="fas fa-solid fa-venus-mars"></i>
                    <span class="font-weight-bold"> </span> in 2023
                </p>
            </div>
            <div class="card-body p-3">
                <div class="chart">
                    <div id="bar" class="chart-canvas" height="300px"></div>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card z-index-2 h-100">
            <div class="card-header pb-0 pt-3 bg-transparent">
                <h6 class="text-capitalize">Sales overview</h6>
                <p class="text-sm mb-0">
                    <i class="fa fa-arrow-up text-success"></i>
                    <span class="font-weight-bold">4% more</span> in 2021
                </p>
            </div>
            <div class="card-body p-3">
                <div class="chart">
                    <div id="area" class="chart-canvas" height="400"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/admin/js/custom/dashboard.js"></script>
    <script>

        //Area
        var options = {
            series: [{
                name: 'series1',
                data: [31, 40, 28, 51, 42, 109, 100]
            }, {
                name: 'series2',
                data: [11, 32, 45, 32, 34, 52, 41]
            }],
            chart: {
                height: 350,
                type: 'area'
            },
            dataLabels: {
                enabled: false
            },
            stroke: {
                curve: 'smooth'
            },
            xaxis: {
                type: 'datetime',
                categories: ["2018-09-19T00:00:00.000Z", "2018-09-19T01:30:00.000Z", "2018-09-19T02:30:00.000Z", "2018-09-19T03:30:00.000Z", "2018-09-19T04:30:00.000Z", "2018-09-19T05:30:00.000Z", "2018-09-19T06:30:00.000Z"]
            },
            tooltip: {
                x: {
                    format: 'dd/MM/yy HH:mm'
                },
            },
        };

        var chart = new ApexCharts(document.querySelector("#area"), options);
        chart.render();
    </script>
}